@model Web.ViewModels.CruiseCreateEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
    
@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Cruise</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Cruise.CruiseId)
    
