                    @Html.ListBoxFor(model => model.LeaderIds, Model.LeadersMultiSelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LeaderIds, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
